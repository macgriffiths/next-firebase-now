{
    "version": 2,
    "builds": [
        {
            "src": "server/index.js",
            "use": "@now/node",
            "config": {
                "maxLambdaSize": "10mb"
            }
        },
        {
            "src": "client/package.json",
            "use": "@now/next"
        }
    ],
    "routes": [
        {
            "src": "/server",
            "dest": "server/index.js"
        },
        {
            "src": "/(.*)",
            "dest": "/client/$1"
        }
    ]
}